<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="layout方法"
        android:background="#cccc"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tv_offset"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="offset方法"
        android:background="#cccc"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />


    <TextView
        android:id="@+id/tv_scrollto"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="scrollto 和 scrollby"
        android:background="#cccc"
        android:gravity="center"
        android:layout_marginBottom="10dp"

        />


    <TextView
        android:id="@+id/tv_scroller"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="scroller方法"
        android:background="#cccc"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />


    <TextView
        android:id="@+id/tv_anima"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="属性动画"
        android:background="#cccc"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />


    <TextView
        android:id="@+id/tv_viewhelper"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="viewhelper"
        android:background="#cccc"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>
